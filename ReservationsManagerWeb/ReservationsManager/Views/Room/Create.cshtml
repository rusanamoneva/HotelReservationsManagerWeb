@using Data.Enumeration
@model ReservationsManager.Models.Room.RoomCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Index</h1>

<h4>Create Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label"></label>
                <select asp-for="RoomType" asp-items="Html.GetEnumSelectList<RoomTypeEnum>()"></select>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFree" /> @Html.DisplayNameFor(model => model.IsFree)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PricePerAdult" class="control-label"></label>
                <input asp-for="PricePerAdult" class="form-control" />
                <span asp-validation-for="PricePerAdult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerChild" class="control-label"></label>
                <input asp-for="PricePerChild" class="form-control" />
                <span asp-validation-for="PricePerChild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
